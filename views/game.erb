<html>
<head>
    	<link rel="stylesheet" type="text/css" href="/css/main.css">
</head>
<body>  

    <div class="wrap">
    <div class="wrap1">
        <h1>Player1</h1>
    </div>
        <div class="wrap2">
			<form method="post" action="game">
				<table>
					<%board.board.each_with_index do |n,i|%>
                        <% if n != "X" && n != "O"%>
                            <% n = "&nbsp;"%>
                        <% end%>
						<% if i == 0 || i == 3 || i == 6 %>
						<tr>
						<% end%>
						<td>
							<button value='<%= i + 1 %>' name="choice"><%= n%></button>
						</td>
						<% if i == 2 || i == 5 || i == 8 %>
						</tr>
						<% end%>
					<% end%>
				</table>
			</form>
		</div>

        <div class="wrap3">
            <h1>Player2</h1>
            <form method="post" action="replay">
            <input type="submit" value="Play again">
            </form>
        </div>
        </div>
</body>
</html>